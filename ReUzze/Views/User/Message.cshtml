@model ReUzze.Models.MessageViewModel

@{
    ViewBag.Title = "Message Management - Send Mail To User";
    ViewBag.Description = "With This view you can send a Mail.";
    ViewBag.Keywords = "RWD";
}

<div class="row">
    <section class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Send Mail To User
            </div>
            <div class="panel-body">
                @using (Html.BeginForm()) {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <fieldset>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Email)
                            @Html.TextBoxFor(model => model.Email, new {@class="form-control", @readonly= "readonly" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Subject)
                            @Html.TextBoxFor(model => model.Subject, new {@class="form-control" })
                            @Html.ValidationMessageFor(model => model.Subject)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Body)
                            @Html.TextAreaFor(model => model.Body, new {@class="form-control ckeditor", rows=18, cols=100 })
                            @Html.ValidationMessageFor(model => model.Body)
                        </div>   
                        <div class="form-group">
                            @Html.LabelFor(model => model.Copy)
                            @Html.CheckBoxFor(model => model.Copy)
                        </div>  
                        <input type="submit" value="Create" class="btn btn-default" />
                    </fieldset>
                }
                <div class="pull-right">
                    @Html.ActionLink("Back to List", "Index")
                </div>
            </div>
        </div>
    </section>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="http://maps.google.com/maps/api/js?sensor=false"></script>
    @Scripts.Render("~/bundles/ckeditor")
}