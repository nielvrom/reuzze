@model App.Models.Region

@{
    ViewBag.Title = "Region Management - Create Region";
    ViewBag.Description = "With This view you can create an a Region.";
    ViewBag.Keywords = "reuzze,region,create";
}

<section class="col-xs-10 col-sm-10 col-md-10 col-lg-10">
    <div class="panel panel-default">
        <div class="panel-heading">
            Create a new Region
        </div>
        <div class="panel-body">
            @using (Html.BeginForm("Create", "Region", FormMethod.Post, new { autocomplete = "off" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <fieldset>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name)
                        @Html.TextBoxFor(model => model.Name, new {@class="form-control" })
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>                 
                    <input type="submit" value="Create" class="btn btn-default" />
                </fieldset>
            }
            <div class="pull-right well">
                @Html.ActionLink("Back to Regions List", "Index")
            </div>
        </div>
    </div>
</section>
<section class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
    <div class="panel panel-default">
        <div class="panel-heading">
            Regions in Belgium
        </div>
        <div class="panel-body">
            <ul>
                <li>West-Vlaanderen</li>
                <li>Oost-Vlaanderen</li>
                <li>Antwerpen</li>
                <li>Vlaams-Brabant</li>
                <li>Limburg</li>
            </ul>
        </div>
    </div>
</section>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
